{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "array",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": [],
  "examples": [
      []
  ],
  "items": [],
  "additionalItems":
    {
      "type": "object",
      "required": ["type"],
      "properties": { "type": { "enum": ["boolean", "choice"] } },
      "allOf": [
         {"if":{"properties":{"type":{"const":"boolean"}}}, "then":{"$ref": "./boolean.json"}},
         {"if":{"properties":{"type":{"const":"choice"}}}, "then":{"$ref": "./choice.json"}}
      ]
    }

}
