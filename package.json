{
    "name": "hubl",
    "displayName": "HubSpot VS Code Extension",
    "description": "HubSpot CMS Hub support for VS Code",
    "version": "0.15.0",
    "publisher": "HubSpot",
    "engines": {
        "vscode": "^1.30.0"
    },
    "scripts": {
        "generate": "node ./scripts/generate.js",
        "lint": "eslint . && prettier --list-different '**/*.{ts,js,json}'",
        "prettier:write": "prettier --write '**/*.{ts,js,json}'",
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/HubSpot/hubspot-cms-vscode"
    },
    "homepage": "https://github.com/HubSpot/hubspot-cms-vscode/blob/master/README.md",
    "categories": [
        "Snippets"
    ],
    "icon": "images/hubspot-logo.png",
    "main": "./dist/extension.js",
    "activationEvents": [
        "onLanguage:html-hubl",
        "onLanguage:css-hubl",
        "onLanguage:hubl",
        "onView:hubspot:portals",
        "onView:hubspot:documentation"
    ],
    "contributes": {
        "snippets": [
            {
                "language": "html-hubl",
                "path": "./snippets/auto_gen/hubl_filters.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/auto_gen/hubl_functions.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/auto_gen/hubl_tags.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/auto_gen/hubl_expTests.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/man_gen/hubl_extras.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/man_gen/hubl_request_variables.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/man_gen/hubl_blog_variables.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/man_gen/hubl_general_variables.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/man_gen/hubl_color_and_font_settings.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/man_gen/hubl_email_variables.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/man_gen/hubl_required_email_template_variables.json"
            },
            {
                "language": "html-hubl",
                "path": "./snippets/man_gen/default_modules.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/auto_gen/hubl_filters.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/auto_gen/hubl_functions.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/auto_gen/hubl_tags.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/auto_gen/hubl_expTests.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/man_gen/hubl_extras.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/man_gen/hubl_request_variables.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/man_gen/hubl_blog_variables.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/man_gen/hubl_general_variables.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/man_gen/hubl_color_and_font_settings.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/man_gen/hubl_email_variables.json"
            },
            {
                "language": "css-hubl",
                "path": "./snippets/man_gen/hubl_required_email_template_variables.json"
            },
            {
                "language": "json",
                "path": "./snippets/man_gen/hubl_custom_module_fields.json"
            }
        ],
        "languages": [
            {
                "id": "hubl",
                "aliases": [
                    "HubL"
                ],
                "configuration": "./langconfig/hubl-language-configuration.json"
            },
            {
                "id": "html-hubl",
                "aliases": [
                    "HTML + HubL"
                ],
                "configuration": "./langconfig/hubl-html-language-configuration.json"
            },
            {
                "id": "css-hubl",
                "aliases": [
                    "CSS + HubL"
                ],
                "configuration": "./langconfig/hubl-css-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hubl",
                "scopeName": "source.hubl",
                "path": "./syntaxes/hubl.json",
                "injectTo": [
                    "text.html.hubl",
                    "text.css.hubl"
                ]
            },
            {
                "language": "html-hubl",
                "scopeName": "text.html.hubl",
                "path": "./syntaxes/html-hubl.json"
            },
            {
                "language": "css-hubl",
                "scopeName": "text.css.hubl",
                "path": "./syntaxes/css-hubl.json"
            }
        ],
        "configuration": {
            "title": "HubSpot",
            "properties": {
                "hubspot.beta": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "Enable HubSpot VS Code extension beta features\n\n*Note: beta features may require a valid `hubspot.config.yml` file*"
                },
                "hubspot.hublLinting": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enables code linting for HTML+HUBL and CSS+HUBL languages.\n\n*Requires a valid `hubspot.config.yml` file*"
                },
                "hubspot.network.authServerPort": {
                    "type": "number",
                    "default": 4441,
                    "markdownDescription": "Port to use for running the local auth server used for obtaining authentication data when authenticating HubSpot accounts"
                }
            }
        },
        "commands": [
            {
                "command": "hubspot.initializeAuth",
                "title": "Initialize HubSpot Authentication"
            },
            {
                "command": "hubspot.config.setDefaultAccount",
                "title": "Set Default Account"
              }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "hubspot.initializeAuth",
                    "when": "hubspot.folderContainsHubSpotConfigYaml",
                    "group": "HubSpot"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "hubspot-explorer",
                    "title": "HubSpot",
                    "icon": "images/hubspot-logo.svg"
                }
            ]
        },
        "views": {
            "hubspot-explorer": [
                {
                    "id": "hubspot:portals",
                    "name": "Portals",
                    "when": "hubspot.folderContainsHubSpotConfigYaml"
                },
                {
                    "id": "hubspot:portalAuth",
                    "name": "Authentication"
                },
                {
                    "id": "hubspot:documentation",
                    "name": "Documentation"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "hubspot:portalAuth",
                "contents": "No authenticated accounts were found.\nIn order to use HubSpot VSCode features, you need to authenticate your account(s). \n[Authenticate HubSpot Account](https://local.hubspotqa.com/personal-access-key/883356191?redirectUrl=http://localhost:4441)\n[Create Developer Sandbox Account](https://app.hubspot.com/signup-hubspot/cms-developers)\nTo learn more about authentication using personal access keys, [read our docs](https://developers.hubspot.com/docs/cms/personal-access-key).",
                "when": "!hubspot.folderContainsHubSpotConfigYaml"
            },
            {
                "view": "hubspot:portalAuth",
                "contents": "In order to use HubSpot VSCode features, you need to authenticate your account(s). \n[Authenticate HubSpot Account](https://local.hubspotqa.com/personal-access-key/883356191?redirectUrl=http://localhost:4441)\n[Create Developer Sandbox Account](https://app.hubspot.com/signup-hubspot/cms-developers)\nTo learn more about authentication using personal access keys, [read our docs](https://developers.hubspot.com/docs/cms/personal-access-key).",
                "when": "hubspot.folderContainsHubSpotConfigYaml"
            }
        ]
    },
    "dependencies": {
        "@hubspot/cli-lib": "^3.0.7",
        "body-parser": "^1.20.1",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "fs-extra": "^9.0.1",
        "js-yaml": "^4.1.0",
        "node-fetch": "^3.1.1",
        "set-value": ">=4.0.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.14",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^15.12.4",
        "@types/vscode": "1.30.0",
        "eslint": "^7.5.0",
        "node-loader": "^2.0.0",
        "prettier": "^2.0.5",
        "ts-loader": "^9.2.3",
        "typescript": "^4.3.4",
        "webpack": "^5.40.0",
        "webpack-cli": "^4.7.2",
        "webpack-node-externals": "^3.0.0"
    }
}
