{
  "brackets": [
    ["{%", "%}"],
    ["{{", "}}"],
    ["{#", "#}"],
    ["{", "}"],
		["[", "]"],
		["(", ")"]
  ],
  "autoClosingPairs": [
    ["{#", "#}"],
    ["{{", "}}"],
    ["{%", "%}"],
		{ "open": "{", "close": "}", "notIn": ["string", "comment"] },
		{ "open": "[", "close": "]", "notIn": ["string", "comment"] },
		{ "open": "(", "close": ")", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
		{ "open": "'", "close": "'", "notIn": ["string", "comment"] }
	],
  "surroundingPairs": [
    ["{", "}"],
    ["%", "%"],
    ["#", "#"],
    ["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"]
  ],

  "comments": {
    "blockComment": ["/*", "*/"]
  },
  "indentationRules": {
    "decreaseIndentPattern": ".*{%(.*?end).*%}*.",
    "increaseIndentPattern": ".*{%(?!.*end).*%}.*"
  }
}
